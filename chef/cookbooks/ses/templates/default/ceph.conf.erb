[global]
fsid = <%= node[:ses][:ceph_conf][:fsid]] %>
mon_initial_members = <%= node[:ses][:ceph_conf][:mon_initial_memebers] %>
mon_host = <%= node[:ses][:ceph_conf][:mon_host] %>
auth_cluster_required = cephx
auth_service_required = cephx
auth_client_required = cephx
filestore_xattr_use_omap = true
public_network = <%= node[:ses][:ceph_conf][:public_network] %>
cluster_network = <%= node[:ses][:ceph_conf][:cluster_network] %>

# enable old ceph health format in the json output. This fixes the
# ceph_exporter. This option will only stay until the prometheus plugin takes
# over
mon_health_preluminous_compat = true
mon health preluminous compat warning = false

rbd default features = 3

[client.<%= node[:ses][:cinder][:rbd_store_user] %>]
keyring=client.ceph.<%= node[:ses][:cinder][:rbd_store_user] %>.keyring
[client.<%= node[:ses][:cinder-backup][:rbd_store_user] %>]
keyring=client.ceph.<%= node[:ses][:cinder-backup][:rbd_store_user] %>.keyring
[client.<%= node[:ses][:glance][:rbd_store_user] %>]
keyring=client.ceph.<%= node[:ses][:glance][:rbd_store_user] %>.keyring
